@model EGestora.GestoraControlAdm.Application.ViewModels.EmpresaViewModel

@{
    ViewBag.Title = "Editar Empresa";
}

<div class="row">
    <div class="col-lg-12">
        <div class="container">
            <h1 class="page-header">Editar Empresa</h1>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.EmpresaId)

                    <div class="panel panel-default">
                        <div class="panel-heading">Empresa</div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">

                                    <div class="form-group">
                                        <label class="control-label col-md-2"></label>
                                        <div class="col-md-5">
                                            <label>
                                                <input type="radio" name="FlagIsPessoaJuridica" id="fisica" value="false" checked="">
                                                Pessoa Física
                                            </label>
                                        </div>
                                        <div class="col-md-5">
                                            <label>
                                                <input type="radio" name="FlagIsPessoaJuridica" id="juridica" value="true">
                                                Pessoa Jurídica
                                            </label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-2">Pessoa Jurídica</label>
                                        <div class="col-md-10">
                                            @Html.DropDownList("PessoaId", (IEnumerable<SelectListItem>)ViewBag.PessoaJuridicaList, String.Empty, new { @class = "form-control", id = "pj" })
                                            @Html.ValidationMessageFor(model => model.PessoaId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-2">Pessoa Física</label>
                                        <div class="col-md-10">
                                            @Html.DropDownList("PessoaId", (IEnumerable<SelectListItem>)ViewBag.PessoaFisicaList, String.Empty, new { @class = "form-control", id = "pf" })
                                            @Html.ValidationMessageFor(model => model.PessoaId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Aliquota, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Aliquota, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Aliquota, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.LoginIss, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.LoginIss, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.LoginIss, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SenhaIss, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.SenhaIss, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.SenhaIss, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.WebServiceHomologacao, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.WebServiceHomologacao, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.WebServiceHomologacao, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.WebServiceProducao, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.WebServiceProducao, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.WebServiceProducao, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.OptanteSimplesNacional, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <div class="checkbox">
                                                @Html.EditorFor(model => model.OptanteSimplesNacional)
                                                @Html.ValidationMessageFor(model => model.OptanteSimplesNacional, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.RegimeApuracaoId, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.DropDownList("RegimeApuracaoId", (IEnumerable<SelectListItem>)ViewBag.RegimeApuracaoList, String.Empty, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.RegimeApuracaoId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.RegimeTributacaoId, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.DropDownList("RegimeTributacaoId", (IEnumerable<SelectListItem>)ViewBag.RegimeTributacaoList, String.Empty, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.RegimeTributacaoId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.NaturezaOperacaoId, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.DropDownList("NaturezaOperacaoId", (IEnumerable<SelectListItem>)ViewBag.NaturezaOperacaoList, String.Empty, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.NaturezaOperacaoId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.EnquadramentoServicoId, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.DropDownList("EnquadramentoServicoId", (IEnumerable<SelectListItem>)ViewBag.EnquadramentoServicoList, String.Empty, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.EnquadramentoServicoId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <input type="submit" value="Salvar" class="btn btn-success" />
                            @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/EnableDisablePjPf.js"></script>
}
