@model IEnumerable<EGestora.GestoraControlAdm.Application.ViewModels.EnderecoViewModel>

@{
    var Controller = @ViewData["_controller"].ToString();
    var PessoaId = ViewBag.PessoaId;
}


@if (Model != null)
{
    <div class="form-group">
        <a id="enderecoListAddLink" href="@Url.Action("AdicionarEndereco", "Pessoas", new { id = PessoaId })" data-modal="" class="btn btn-xs btn-success"><span title="Adicionar" class="glyphicon glyphicon-plus"></span></a>
    </div>
    <div class="table-responsive">
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Logradouro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Complemento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Bairro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CEP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Logradouro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Complemento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bairro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CEP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @if (item.Principal)
                        {
                            <span class="label label-primary">Principal</span>
                        }
                        @if (item.Entrega)
                        {
                            <span class="label label-info">Entrega</span>
                        }
                        @if (item.Cobranca)
                        {
                            <span class="label label-success">Cobrança</span>
                        }
                        @if (!item.Principal && !item.Entrega && !item.Cobranca)
                        {
                            <span class="label label-default">Comum</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("AtualizarEndereco", "Pessoas", new { id = item.EnderecoId })" data-modal="" class="btn btn-xs btn-default"><span title="Editar" class="glyphicon glyphicon-pencil"></span></a>
                        <a href="@Url.Action("DeletarEndereco", "Pessoas", new { id = item.EnderecoId })" data-modal="" class="btn btn-xs btn-danger"><span title="Remover" class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
            
        </table>
    </div>
}
else
{
    <table class="table">
        <tr>
            <th>
                Nenhum endereço foi registrado.
            </th>
        </tr>
    </table>
}



