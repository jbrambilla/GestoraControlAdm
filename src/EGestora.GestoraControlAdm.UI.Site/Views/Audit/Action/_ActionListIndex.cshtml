@model IEnumerable<EGestora.GestoraControlAdm.Application.ViewModels.AuditActionViewModel>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
    </button>
    <h4 class="modal-title">Lista de Ações</h4>
</div>

<div class="modal-body">
    @if (Model.Any())
    {
        <table class="table table-user-information">
            <thead>
                <tr>
                    <th>Nome da Ação</th>
                    <th>Adicionado Em</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var action in Model)
                {
                    <tr>
                        <td>@action.ActionName</td>
                        <td>@action.CriadoEm</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p><strong>Nenhuma Ação foi registrada.</strong></p>
        <p>Todas as ações deste controller estão sendo auditadas.</p>
    }
</div>

<div class="modal-footer">
    <input type="button" class="btn btn-success" data-dismiss="modal" value="Fechar" />
</div>
