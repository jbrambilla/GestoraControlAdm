@model EGestora.GestoraControlAdm.Application.ViewModels.ClienteViewModel

@{
    ViewBag.Title = "Editar Cliente";
}

<div class="row">
    <div class="col-lg-12">
        <div class="container">
            <h1 class="page-header">Editar Cliente</h1>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ClienteId)

                    <div class="form-group">
                        <label class="control-label col-md-2"></label>
                        <div class="col-md-5">
                            <label>
                                <input type="radio" name="FlagIsPessoaJuridica" id="fisica" value="false" checked="">
                                Pessoa Física
                            </label>
                        </div>
                        <div class="col-md-5">
                            <label>
                                <input type="radio" name="FlagIsPessoaJuridica" id="juridica" value="true">
                                Pessoa Jurídica
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Pessoa Jurídica</label>
                        <div class="col-md-10">
                            @Html.DropDownList("PessoaId", (IEnumerable<SelectListItem>)ViewBag.PessoaJuridicaList, String.Empty, new { @class = "form-control", id = "pj" })
                            @Html.ValidationMessageFor(model => model.PessoaId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Pessoa Física</label>
                        <div class="col-md-10">
                            @Html.DropDownList("PessoaId", (IEnumerable<SelectListItem>)ViewBag.PessoaFisicaList, String.Empty, new { @class = "form-control", id = "pf" })
                            @Html.ValidationMessageFor(model => model.PessoaId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ComNota, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.ComNota)
                                @Html.ValidationMessageFor(model => model.ComNota, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.VencimentoBoleto, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.VencimentoBoleto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.VencimentoBoleto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.RevendaId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("RevendaId", (IEnumerable<SelectListItem>)ViewBag.RevendaList, String.Empty, new { @class = "form-control" })
                            <p class="help-block">Se o cliente não possuir Revenda, deixe em branco.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.RegimeApuracaoId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("RegimeApuracaoId", (IEnumerable<SelectListItem>)ViewBag.RegimeApuracaoList, String.Empty, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RegimeApuracaoId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <input type="submit" value="Salvar" class="btn btn-success" />
                            @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/EnableDisablePjPf.js"></script>
}
