@model EGestora.GestoraControlAdm.Application.ViewModels.ClienteViewModel

@{
   ViewBag.Title = "Detalhes de Cliente";

   var Titulo = Model.IsPessoaFisica ? Model.PessoaFisica.Nome : Model.PessoaJuridica.RazaoSocial; 
}

<div class="row">
    <div class="col-lg-12">

        <div class="container">
            <h2>Detalhes de Cliente</h2>

            <div class="row">
                <div class="">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h4 class="panel-title"> @Titulo </h4>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-3 col-lg-3 " align="center"> <img src="http://www.imarca.com.br/_easyweb/logomarcas/logomarca-logotipo-logo-mercado-pires-268.gif" alt="..." class="img-circle img-responsive"> </div>

                                <div class=" col-md-9 col-lg-9 ">
                                    <table class="table table-user-information">
                                        <tbody>

                                            @if (Model.IsPessoaJuridica) 
                                            {
                                                @Html.Partial("_DetailsPessoaJuridica", Model.PessoaJuridica)
                                            } else {
                                                @Html.Partial("_DetailsPessoaFisica", Model.PessoaFisica)
                                            }

                                            <tr>
                                                <td>E-mail:</td>
                                                <td><a href="mailto:@Model.Email">@Model.Email</a></td>
                                            </tr>

                                            <tr>
                                                <td>Ativo</td>
                                                <td>@Html.CheckBoxFor(model => model.Ativo, new { disabled = "" })</td>
                                            </tr>

                                            <tr>
                                                <td>Cliente com nota?</td>
                                                <td>@Model.ComNota</td>
                                            </tr>

                                            <tr>
                                                <td>Vencimento do Boleto</td>
                                                <td>@Model.VencimentoBoleto.ToString("d")</td>
                                            </tr>

                                            <tr>
                                                <td>Data de Cadastro</td>
                                                <td>@Model.CriadoEm.ToString("d")</td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <a href="@Url.Action("Edit", "Clientes", new {id = Model.PessoaId})" data-modal="" class="btn btn-primary">
                                <span title="Editar" class="glyphicon glyphicon-pencil"></span>
                            </a>
                            <a href="@Url.Action("Delete", "Clientes", new { id = Model.PessoaId })" data-modal="" class="btn btn-danger">
                                <span title="Excluir" class="glyphicon glyphicon-trash"></span>
                            </a>
                            @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>