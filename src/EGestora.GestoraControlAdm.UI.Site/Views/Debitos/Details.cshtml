@model EGestora.GestoraControlAdm.Application.ViewModels.DebitoViewModel

@{
    ViewBag.Title = "Detalhes do Débito";
}

<div class="row">
    <div class="col-lg-12">

        <div class="container">
            <h2>Detalhes do Débito</h2>

            <div class="row">
                <div class="">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h4 class="panel-title"> @Model.Cliente.PessoaJuridica.RazaoSocial </h4>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-3 col-lg-3 " align="center"> <img src="@Url.Action("ObterImagemCliente", "Clientes", new { id = Model.ClienteId })" alt="" class="img-circle img-responsive"> </div>

                                <ul class="nav nav-tabs col-md-9 col-lg-9 ">
                                    <li class="active"><a href="#infoBasica" data-toggle="tab" aria-expanded="true">Informações Gerais</a></li>
                                    <li class=""><a href="#boleto" data-toggle="tab" aria-expanded="false">Boletos</a></li>
                                </ul>
                                <div class="tab-content col-md-9 col-lg-9 ">
                                    <div class="tab-pane fade in active " id="infoBasica">
                                        <div class="">
                                            <table class="table table-user-information">
                                                <tbody>
                                                    <tr>
                                                        <td>Detalhes</td>
                                                        <td>@Model.Detalhes</td>
                                                    </tr>

                                                    <tr>
                                                        <td>Valor</td>
                                                        <td>@Model.ValorLiquido</td>
                                                    </tr>

                                                    <tr>
                                                        <td>Parcelas</td>
                                                        <td>@Model.Parcelas</td>
                                                    </tr>

                                                    <tr>
                                                        <td>Vencimento</td>
                                                        <td>@Model.Vencimento</td>
                                                    </tr>

                                                    <tr>
                                                        <td>Código de segurança</td>
                                                        <td>@Model.CodigoSeguranca</td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade in" id="boleto">
                                        <div id="replacetargetBoleto">
                                            @Html.Partial("_BoletoList", @Model.BoletoList.OrderBy(b => b.Vencimento))
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="panel-footer">
                            <a href="@Url.Action("Edit", "Debitos", new {id = Model.DebitoId})" class="btn btn-primary">
                                <span title="Editar" class="glyphicon glyphicon-pencil"></span>
                            </a>
                            <a href="@Url.Action("Delete", "Debitos", new { id = Model.DebitoId })" class="btn btn-danger">
                                <span title="Excluir" class="glyphicon glyphicon-trash"></span>
                            </a>
                            @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="myModal" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="myModalContent"></div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/pessoaAjaxModal.js"></script>
}