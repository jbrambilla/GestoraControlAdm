@model EGestora.GestoraControlAdm.Application.ViewModels.FuncionarioEnderecoViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
    </button>
    <h4 class="modal-title">Novo Funcionário</h4>
</div>


@using (Html.BeginForm("AdicionarFuncionario", "Empresas", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Hidden("EmpresaId", (Guid?)ViewBag.EmpresaId)
            @Html.Hidden("FlagIsPessoaJuridica", "false")

            @Html.Partial("_FuncionarioEndereco")

            <div class="modal-footer">
                <input type="submit" value="Adicionar" class="btn btn-success" />
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Fechar" />
            </div>
        </div>
    </div>
}
