@model EGestora.GestoraControlAdm.Application.ViewModels.RevendaViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
    </button>
    <h4 class="modal-title">Adicionar Revenda</h4>
</div>


@using (Html.BeginForm())
{
    <div class="modal-body">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Hidden("PessoaId", (Guid?)ViewBag.PessoaId)

            <div class="form-group">
                <label class="control-label col-md-2">Revenda</label>
                <div class="col-md-10">
                    @Html.DropDownList("RevendaId", (IEnumerable<SelectListItem>)ViewBag.RevendaList, new { @class = "form-control" })
                </div>
            </div>

            <div class="modal-footer">
                <input type="submit" value="Adicionar" class="btn btn-success" />
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Fechar" />
            </div>
        </div>
    </div>
}
