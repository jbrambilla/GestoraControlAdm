        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4 col-lg-offset-4">
            <div class="well no-padding">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id="login-form", @class="smart-form client-form" }))
                {
                    <header>
                        Autenticação
                    </header>

                    <fieldset>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <section>
                            <label class="label">E-mail</label>
                            <label class="input">
                                <i class="icon-append fa fa-user"></i>
                                @Html.TextBoxFor(m => m.Email)
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Por favor entre com seu e-mail ou nome de usuário</b>
                            </label>
                        </section>

                        <section>
                            <label class="label">Senha</label>
                            <label class="input">
                                <i class="icon-append fa fa-lock"></i>
                                @Html.PasswordFor(m => m.Password)
                                <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Entre com sua senha</b>
                            </label>
                            <div class="note">
                                @Html.ActionLink("Esqueceu a senha?", "ForgotPassword", "Account")
                            </div>
                        </section>

                        <section>
                            <label class="checkbox">
                                <input type="checkbox" name="remember" checked="">
                                <i></i>Lembrar-me
                            </label>
                        
                        </section>
                    </fieldset>
                    <footer>
                        <button type="submit" class="btn btn-success">
                            Entrar
                        </button>
                    </footer>
                }

            </div>

            <h5 class="text-center"> - Ou entre usando -</h5>

            <ul class="list-inline text-center">
