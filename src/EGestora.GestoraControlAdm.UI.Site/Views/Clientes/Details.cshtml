@model EGestora.GestoraControlAdm.Application.ViewModels.ClienteViewModel

@{
    ViewBag.Title = "Detalhes de Cliente";

    var Titulo = Model.IsPessoaFisica ? Model.PessoaFisica.Nome : Model.PessoaJuridica.RazaoSocial;
}

<div class="row">
    <div class="col-lg-12">

        <div class="container">
            <h2>Detalhes de Cliente</h2>

            <div class="row">
                <div class="">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h4 class="panel-title"> @Titulo </h4>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-3 col-lg-3 " align="center"> <img src="@Url.Action("ObterImagemCliente", "Clientes", new { id = Model.PessoaId })" alt="@Titulo" class="img-circle img-responsive"> </div>

                                <ul class="nav nav-tabs col-md-9 col-lg-9 ">
                                    <li class="active"><a href="#infoBasica" data-toggle="tab" aria-expanded="true">Informações Básicas</a></li>
                                    <li class=""><a href="#servico" data-toggle="tab" aria-expanded="false">Serviços</a></li>
                                    <li class=""><a href="#cnae" data-toggle="tab" aria-expanded="false">Cnaes</a></li>
                                    <li class=""><a href="#revenda" data-toggle="tab" aria-expanded="false">Revenda</a></li>
                                </ul>
                                <div class="tab-content col-md-9 col-lg-9 ">
                                    <div class="tab-pane fade in active " id="infoBasica">
                                        <div class="">
                                            <table class="table table-user-information">
                                                <tbody>

                                                    @if (Model.IsPessoaJuridica)
                                                    {
                                                        @Html.Partial("_DetailsPessoaJuridica", Model.PessoaJuridica)
                                                    }
                                                    else
                                                    {
                                                        @Html.Partial("_DetailsPessoaFisica", Model.PessoaFisica)
                                                    }

                                                    <tr>
                                                        <td>E-mail:</td>
                                                        <td><a href="mailto:@Model.Email">@Model.Email</a></td>
                                                    </tr>

                                                    <tr>
                                                        <td>Ativo</td>
                                                        <td>@Html.CheckBoxFor(model => model.Ativo, new { disabled = "" })</td>
                                                    </tr>

                                                    <tr>
                                                        <td>Cliente com nota?</td>
                                                        <td>@Model.ComNota</td>
                                                    </tr>

                                                    <tr>
                                                        <td>Vencimento do Boleto</td>
                                                        <td>@Model.VencimentoBoleto.ToString("d")</td>
                                                    </tr>

                                                    <tr>
                                                        <td>Data de Cadastro</td>
                                                        <td>@Model.CriadoEm.ToString("d")</td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade in" id="servico">
                                    </div>
                                    <div class="tab-pane fade in" id="cnae">
                                        <div id="replacetargetCnae">
                                            @Html.Partial("_CnaeList", Model.CnaeList, new ViewDataDictionary { {"PessoaId", Model.PessoaId } })
                                        </div>
                                    </div>
                                    <div class="tab-pane fade in" id="revenda">
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="panel-footer">
                            <a href="@Url.Action("Edit", "Clientes", new {id = Model.PessoaId})" class="btn btn-primary">
                                <span title="Editar" class="glyphicon glyphicon-pencil"></span>
                            </a>
                            <a href="@Url.Action("Delete", "Clientes", new { id = Model.PessoaId })" class="btn btn-danger">
                                <span title="Excluir" class="glyphicon glyphicon-trash"></span>
                            </a>
                            @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div id="replacetarget">
                @Html.Partial("_EnderecoList", Model.EnderecoList, new ViewDataDictionary { { "_controller", "Clientes" }, { "PessoaId", Model.PessoaId.ToString() } })
            </div>
        </div>
    </div>
</div>

<div id="myModal" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="myModalContent"></div>
        </div>
    </div>
</div>

<script type="text/javascript">


        $(function () {
            $.ajaxSetup({ cache: false });

            $("a[data-modal]").on("click", function (e) {
                $('#myModalContent').load(this.href, function () {
                    $('#myModal').modal({
                        /*backdrop: 'static',*/
                        keyboard: true
                    }, 'show');
                    bindForm(this);
                });
                return false;
            });
        });

        function bindForm(dialog) {
            $('form', dialog).submit(function () {
                $.ajax({
                    url: this.action,
                    type: this.method,
                    data: $(this).serialize(),
                    success: function (result) {
                        if (result.success) {
                            $('#myModal').modal('hide');
                            if (result.replaceTarget == "cnae") {
                                $('#replacetargetCnae').load(result.url);
                            } else {
                                $('#replacetarget').load(result.url); // Carrega o resultado HTML para a div demarcada
                            }
                        } else {
                            $('#myModalContent').html(result);
                            bindForm(dialog);
                        }
                    }
                });
                return false;
            });
        }
</script>