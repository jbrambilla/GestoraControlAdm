@model EGestora.GestoraControlAdm.Application.ViewModels.DebitoViewModel


<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Detalhes)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Detalhes)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.ValorLiquido)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.ValorLiquido)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Parcelas)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Parcelas)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.CriadoEm)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.CriadoEm)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Vencimento)
    </dt>

    <dd>
        @Model.Vencimento.ToString("d")
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.ValorPago)
    </dt>
    <dd>
        @Html.TextBoxFor(model => model.ValorPago, new { value = Model.ValorLiquido, @class = "form-control" })
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Desconto)
    </dt>
    <dd>
        @Html.TextBoxFor(model => model.Desconto, new { @class = "form-control" })
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Juros)
    </dt>
    <dd>
        @Html.TextBoxFor(model => model.Juros, new { @class = "form-control" })
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Multa)
    </dt>
    <dd>
        @Html.TextBoxFor(model => model.Multa, new { @class = "form-control" })
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.PagoEm)
    </dt>

    <dd>
        <input type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" id="PagoEm" name="@Html.NameFor(d => d.PagoEm)" required class="form-control" />
    </dd>
</dl>


