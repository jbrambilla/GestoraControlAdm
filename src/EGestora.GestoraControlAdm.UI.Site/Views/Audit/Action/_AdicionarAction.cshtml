@model EGestora.GestoraControlAdm.Application.ViewModels.AuditActionViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
    </button>
    <h4 class="modal-title">Nova ação a ser auditada</h4>
</div>


@using (Html.BeginForm())
{
    <div class="modal-body">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Hidden("AuditControllerId", (Guid?)ViewBag.AuditControllerId)

            <div class="form-group">
                @Html.LabelFor(model => model.AuditActionId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("ActionName", (IEnumerable<SelectListItem>)ViewBag.ActionList, new { @class = "form-control" })
                </div>
            </div>

            <div class="modal-footer">
                <input type="submit" value="Adicionar" class="btn btn-success" />
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Fechar" />
            </div>
        </div>
    </div>
}
