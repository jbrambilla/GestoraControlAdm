@model EGestora.GestoraControlAdm.Application.ViewModels.EmpresaViewModel

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-lg-12">

        <div class="container">
            <h2>Deletar Empresa</h2>
            <h3>Você tem certeza que deseja realizar esta ação?</h3>
            <div class="row">
                <div class="">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h4 class="panel-title">@Model.Nome</h4>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-3 col-lg-3 " align="center"> <img src="@Url.Action("ObterImagemPessoa", "Pessoas", new { id = Model.PessoaId })" alt="@Model.Nome" class="img-circle img-responsive"> </div>

                                <div class=" col-md-9 col-lg-9 ">
                                    <table class="table table-user-information">
                                        <tbody>

                                            @if (Model.Pessoa.IsPessoaJuridica)
                                            {
                                                @Html.Partial("_DetailsPessoaJuridica", Model.Pessoa.PessoaJuridica)
                                            }
                                            else
                                            {
                                                @Html.Partial("_DetailsPessoaFisica", Model.Pessoa.PessoaFisica)
                                            }

                                            <tr>
                                                <td>Alíquota</td>
                                                <td>@Html.DisplayFor(model => model.Aliquota)</td>
                                            </tr>

                                            <tr>
                                                <td>Optante Simples Nacional</td>
                                                <td>@Html.DisplayFor(model => model.OptanteSimplesNacional)</td>
                                            </tr>

                                            <tr>
                                                <td>Login ISS</td>
                                                <td>@Html.DisplayFor(model => model.LoginIss)</td>
                                            </tr>

                                            <tr>
                                                <td>Senha ISS</td>
                                                <td>@Html.DisplayFor(model => model.SenhaIss)</td>
                                            </tr>

                                            <tr>
                                                <td>WebService de Homologacao</td>
                                                <td>@Html.DisplayFor(model => model.WebServiceHomologacao)</td>
                                            </tr>

                                            <tr>
                                                <td>WebService de Producao</td>
                                                <td>@Html.DisplayFor(model => model.WebServiceProducao)</td>
                                            </tr>

                                            <tr>
                                                <td>Data de Cadastro</td>
                                                <td>@Model.Pessoa.CriadoEm.ToString("d")</td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <button value="Delete" class="btn btn-danger" data-modal="">
                                        <span title="Excluir" class="glyphicon glyphicon-trash"></span>
                                    </button>
                                    @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn btn-default" })
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>