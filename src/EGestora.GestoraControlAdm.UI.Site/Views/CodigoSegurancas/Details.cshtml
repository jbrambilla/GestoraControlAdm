@model EGestora.GestoraControlAdm.Application.ViewModels.CodigoSegurancaViewModel

@{
    ViewBag.Title = "Detalhes do Código de Segurança";
}

<div class="row">
    <div class="col-lg-12">

        <div class="container">
            <h2>Detalhes da Trava</h2>

            <div class="row">
                <div class="">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h4 class="panel-title"> @Model.Cliente.PessoaJuridica.RazaoSocial </h4>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-3 col-lg-3 " align="center"> <img src="@Url.Action("ObterImagemCliente", "Clientes", new { id = Model.ClienteId })" alt="" class="img-circle img-responsive"> </div>

                                <ul class="nav nav-tabs col-md-9 col-lg-9 ">
                                    <li class="active"><a href="#infoBasica" data-toggle="tab" aria-expanded="true">Informações Gerais</a></li>
                                </ul>
                                <div class="tab-content col-md-9 col-lg-9 ">
                                    <div class="tab-pane fade in active " id="infoBasica">
                                        <div class="">
                                            <table class="table table-user-information">
                                                <tbody>
                                                    <tr>
                                                        <td>Código de Trava</td>
                                                        <td><strong>@Model.Codigo</strong></td>
                                                    </tr>

                                                    <tr>
                                                        <td>Data da Trava</td>
                                                        <td>@Model.DataTrava</td>
                                                    </tr>

                                                    <tr>
                                                        <td>Gerado em</td>
                                                        <td>@Model.CriadoEm</td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="panel-footer">
                            <a href="@Url.Action("Edit", "CodigoSegurancas", new { id = Model.CodigoSegurancaId })" class="btn btn-primary">
                                <span title="Editar" class="glyphicon glyphicon-pencil"></span>
                            </a>
                            <a href="@Url.Action("Delete", "CodigoSegurancas", new { id = Model.CodigoSegurancaId })" class="btn btn-danger">
                                <span title="Excluir" class="glyphicon glyphicon-trash"></span>
                            </a>
                            @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>