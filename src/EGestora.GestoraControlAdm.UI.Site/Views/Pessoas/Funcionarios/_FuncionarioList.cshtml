@model EGestora.GestoraControlAdm.Application.ViewModels.PessoaJuridicaViewModel

<br />
<ul class="nav nav-tabs">
    <li class="active"><a href="#pjList" data-toggle="tab" aria-expanded="true">Pessoa Jurídica</a></li>
    <li class=""><a href="#pfList" data-toggle="tab" aria-expanded="false">Pessoa Física</a></li>
</ul>
<div class="tab-content">
    @Html.Partial("_PessoaJuridicaList", Model.FuncionarioList.Where(f => f.Pessoa.PessoaJuridica != null).ToList())
    @Html.Partial("_PessoaFisicaList", Model.FuncionarioList.Where(f => f.Pessoa.PessoaFisica != null).ToList())
</div>

<div class="form-group">
    <a href="@Url.Action("AdicionarFuncionario", "Pessoas", new { id = ViewBag.PessoaId }, "")" class="btn btn-success btn-circle" data-modal="">
        <i title="Adicionar" class="fa fa-plus"></i>
    </a>
</div>

