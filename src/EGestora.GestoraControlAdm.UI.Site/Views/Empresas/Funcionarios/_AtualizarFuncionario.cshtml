@model EGestora.GestoraControlAdm.Application.ViewModels.FuncionarioViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
    </button>
    <h4 class="modal-title">Atualizar Funcionário</h4>
</div>


@using (Html.BeginForm())
{
    <div class="modal-body">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.EmpresaId)
            @Html.HiddenFor(model => model.PessoaId)
            @Html.HiddenFor(model => model.PessoaFisica.PessoaId)

            @Html.Partial("_Funcionario")

            <div class="modal-footer">
                <input type="submit" value="Atualizar" class="btn btn-success" />
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Fechar" />
            </div>
        </div>
    </div>
}


