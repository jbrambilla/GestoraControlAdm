@model IEnumerable<EGestora.GestoraControlAdm.Application.ViewModels.EnderecoViewModel>

@{
    var Controller = @ViewData["_controller"].ToString();
    var id = ViewBag.PessoaId;
}

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Logradouro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Complemento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Bairro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CEP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Logradouro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Complemento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bairro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CEP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        <a href="@Url.Action("AtualizarEndereco", Controller, new { id = item.EnderecoId })" data-modal="" class="btn btn-default btn-circle">
                            <span title="Editar" class="glyphicon glyphicon-pencil"></span>
                        </a>
                        <a href="@Url.Action("DeletarEndereco", Controller, new { id = item.EnderecoId })" data-modal="" class="btn btn-danger btn-circle">
                            <span title="Excluir" class="glyphicon glyphicon-trash"></span>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <table class="table">
        <tr>
            <th>
                Nenhum Endereço Cadastrado.
            </th>
        </tr>
    </table>
}

<div>
    <div class="form-group">
        <a href="@Url.Action("AdicionarEndereco", Controller, new { id = ViewBag.PessoaId }, "")" class="btn btn-success btn-circle" data-modal="">
            <i title="Adicionar" class="fa fa-plus"></i>
        </a>
    </div>
</div>


